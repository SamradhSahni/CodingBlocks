<div>
    <section>
        <button productId="{{this.product._id}}" class="addtocartBtn">Add to Cart</button>
        <button class="buynowBtn">Buy Now</button>
    </section>
    <section class="reviews">
        <button class="writeReview">Write a Review</button>
        <div class="inputReview hide">
            <input type="text" placeholder="Title" class="title">
            <textarea class="description">Enter Description</textarea>
            <input type="hidden" class="productId" value="{{product._id}}">
            <button class="submitReviewBtn">Submit Review</button>
        </div>
        <h4>Latest Reviews</h4>
        <ul class="reviewsList">
            {{#each this.product.reviews as |r|}}
            <li>Title:{{r.title}},Description:{{r.description}}
                {{#if ../isAdmin}}
                <button><a href="/admin/deletereview/?id={{r._id}}&productId={{../product._id}}">Delete</a> </button>
                {{/if}}
            </li>
            {{/each}}
        </ul>
    </section>
</div>