<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Manage Jobs</title>
  <link rel="stylesheet" href="/navbar.css">
  <link rel="stylesheet" href="/admin_manage.css">

</head>

<body>
  {{> jobsNavbar}}

  <div class="container mt-5">
    <h2 class="mb-4">Manage Posted Jobs</h2>

    {{#if jobs.length}}
    <div class="row">
      {{#each jobs}}
      <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <div class="d-flex align-items-center mb-3">
              <img src="{{this.logoUrl}}" alt="Logo" style="width: 50px; height: 50px; object-fit: contain;"
                class="me-3">
              <div>
                <h5 class="card-title mb-0">{{this.title}}</h5>
                <small class="text-muted">{{this.companyName}}</small>
              </div>
            </div>

            <p><strong>Salary:</strong> â‚¹{{this.salary}}</p>
            <p><strong>Deadline:</strong> {{this.deadline}}</p>
            <p><strong>Openings:</strong> {{this.openings}}</p>
            <p><strong>Experience:</strong> {{this.experience}} years</p>
            <p><strong>Skills:</strong> {{this.skills}}</p>
            <p><strong>Description:</strong> {{this.description}}</p>

            <div class="d-flex gap-2 flex-wrap justify-content-end mt-3">
              <a href="/jobs/{{this._id}}/applicants" class="btn btn-primary">View Applicants</a>

              <a href="/jobs/{{this._id}}/edit" class="btn btn-warning">Edit</a>

              <form action="/jobs/{{this._id}}?_method=DELETE" method="POST"
                onsubmit="return confirm('Are you sure you want to delete this job?');">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </div>

          </div>
        </div>
      </div>

      {{/each}}
    </div>
    {{else}}
    <p class="text-muted">No jobs posted yet.</p>
    {{/if}}

  </div>
</body>

</html>